//decimal to binary
import java.util.*;
class binary{
public static void main( String[] args){
    Scanner sc = new Scanner(System.in);
    int n = sc.nextInt();
    int[] arr =new int[1000];
    int i =0;
    while(n>0){
        arr[i]=n%2;
        n =n/2;
        i++;

    }
    for(int j = i-1;j>=0;j--){
        System.out.print(arr[j]);
    }


}
}
